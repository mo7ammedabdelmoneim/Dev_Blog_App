                    <p class="text-gray-400 text-sm mt-2">Be the first to share your knowledge!</p>
                </div>
            }
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="text-center mt-12">
                <a href="@Url.Action("Index", "Guest", new {pageNumber = 1})"
                   class="inline-flex items-center gap-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-8 py-3 rounded-xl font-semibold hover:shadow-lg hover:scale-105 transition">
