@model AddPostViewModel
@{
    Layout = "_AdminLayout";
    bool isEdit = Model.Id != Guid.Empty;
    ViewData["Title"] = isEdit ? "Edit Post" : "Add New Post";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote.min.css" rel="stylesheet">

<style>
    .card-modern {
        background: linear-gradient(145deg, #ffffff 0%, #f8f9ff 100%);
        border: 1px solid rgba(102, 126, 234, 0.1);
    }

    .form-input {
        transition: all 0.2s ease;
    }

        .form-input:focus {
            transform: translateY(-2px);
        }

    .tag-select option:checked {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
</style>

<div class="max-w-5xl mx-auto">

    <!-- Header Section -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-4xl font-extrabold text-gray-900 flex items-center gap-3">
                    <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl p-3">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                    </div>
                    @(isEdit ? "Edit Post" : "Create New Post")
                </h1>
                <p class="text-gray-600 mt-2 ml-1">@(isEdit ? "Update your blog post content" : "Share your knowledge with the community")</p>
            </div>

            <a asp-action="Index" class="flex items-center gap-2 text-indigo-600 hover:text-indigo-800 font-semibold transition">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Back to Posts
            </a>
        </div>
    </div>

    <!-- Main Form -->
    <div class="card-modern rounded-2xl shadow-xl p-8">
        <form asp-action="Add" method="post" enctype="multipart/form-data" class="space-y-8">

            <!-- Hidden ID -->
            <input asp-for="Id" type="hidden" />

            <!-- Title Field -->
            <div>
                <label asp-for="Title" class="flex items-center gap-2 text-sm font-bold text-gray-700 mb-3">
                    <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                    </svg>
                    Post Title
                    <span class="text-red-500">*</span>
                </label>
                <input asp-for="Title"
                       class="form-input w-full border-2 border-gray-300 rounded-xl p-4 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-lg font-medium"
                       placeholder="Enter an engaging title..." />
                <span asp-validation-for="Title" class="text-red-500 text-sm mt-1 block"></span>
                <p class="text-xs text-gray-500 mt-2">A catchy title helps attract more readers</p>
            </div>

            <!-- Content Editor -->
            <div>
                <label asp-for="Content" class="flex items-center gap-2 text-sm font-bold text-gray-700 mb-3">
                    <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    Post Content
                    <span class="text-red-500">*</span>
                </label>
                <div class="border-2 border-gray-300 rounded-xl overflow-hidden focus-within:ring-2 focus-within:ring-indigo-500 focus-within:border-indigo-500">
                    <textarea id="editor" asp-for="Content" class="hidden"></textarea>
                </div>
                <span asp-validation-for="Content" class="text-red-500 text-sm mt-1 block"></span>
                <p class="text-xs text-gray-500 mt-2">Write your content using the rich text editor above</p>
            </div>

            <!-- Category & Tags Row -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                <!-- Category -->
                <div>
                    <label asp-for="CategoryId" class="flex items-center gap-2 text-sm font-bold text-gray-700 mb-3">
                        <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                        </svg>
                        Category
                        <span class="text-red-500">*</span>
                    </label>
                    <div class="relative">
                        <select asp-for="CategoryId"
                                asp-items="ViewBag.Categories"
                                class="form-input w-full border-2 border-gray-300 rounded-xl p-4 bg-white focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 appearance-none text-gray-700 font-medium">
                            <option value="">-- Select a Category --</option>
                        </select>
                        <div class="absolute inset-y-0 right-0 flex items-center pr-4 pointer-events-none">
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </div>
                    </div>
                    <span asp-validation-for="CategoryId" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <!-- Tags -->
                <div>
                    <label asp-for="Tags" class="flex items-center gap-2 text-sm font-bold text-gray-700 mb-3">
                        <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                        </svg>
                        Tags
                    </label>
                    <select asp-for="Tags"
                            asp-items="ViewBag.Tags"
                            multiple
                            class="tag-select form-input w-full border-2 border-gray-300 rounded-xl p-3 bg-white focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 h-40 text-gray-700">
                    </select>
                    <p class="text-xs text-gray-500 mt-2">
                        <span class="inline-flex items-center gap-1">
                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            Hold CTRL (or CMD on Mac) to select multiple tags
                        </span>
                    </p>
                </div>
            </div>

            <!-- Cover Image -->
            <div>
                <label class="flex items-center gap-2 text-sm font-bold text-gray-700 mb-3">
                    <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    Cover Image
                </label>

                <div class="border-2 border-dashed border-gray-300 rounded-xl p-6 text-center hover:border-indigo-500 transition">
                    <input type="file"
                           asp-for="Cover"
                           accept="image/*"
                           id="coverInput"
                           class="hidden"
                           onchange="previewImage(event)">

                    <label for="coverInput" class="cursor-pointer">
                        <div class="space-y-3">
                            <div class="flex justify-center">
                                <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                                </svg>
                            </div>
                            <div>
                                <span class="text-indigo-600 font-semibold hover:text-indigo-700">Click to upload</span>
                                <span class="text-gray-600"> or drag and drop</span>
                            </div>
                            <p class="text-xs text-gray-500">PNG, JPG, GIF up to 10MB</p>
                        </div>
                    </label>
                </div>

                <!-- Image Preview -->
                <div class="mt-6" id="previewContainer" style="@(isEdit && !string.IsNullOrEmpty(Model.ExistingCoverUrl) ? "" : "display: none;")">
                    <p class="text-sm font-semibold text-gray-700 mb-3">Preview:</p>
                    <div class="relative inline-block">
                        <img id="imagePreview"
                             src="@(isEdit && !string.IsNullOrEmpty(Model.ExistingCoverUrl) ? Model.ExistingCoverUrl : "#")"
                             alt="Cover Preview"
                             class="max-w-full h-64 object-cover rounded-xl border-2 border-gray-200 shadow-lg" />
                        <button type="button"
                                onclick="removeImage()"
                                class="absolute top-2 right-2 bg-red-500 text-white p-2 rounded-full hover:bg-red-600 transition">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex items-center justify-between pt-8 border-t-2 border-gray-200">
                <a asp-action="Index" class="flex items-center gap-2 px-6 py-3 border-2 border-gray-300 text-gray-700 rounded-xl font-semibold hover:bg-gray-50 transition">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                    Cancel
                </a>

                <button type="submit"
                        class="flex items-center gap-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-8 py-3 rounded-xl shadow-lg hover:shadow-xl hover:scale-105 transition font-semibold">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        @if (isEdit)
                        {
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                        }
                        else
                        {
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                        }
                    </svg>
                    <span>@(isEdit ? "Update Post" : "Publish Post")</span>
                </button>
            </div>
        </form>
    </div>

    <!-- Tips Section -->
    <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-indigo-50 border border-indigo-200 rounded-xl p-4">
            <div class="flex items-center gap-2 mb-2">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
                <h3 class="font-bold text-indigo-900">Pro Tip</h3>
            </div>
            <p class="text-sm text-indigo-700">Use descriptive titles with keywords for better SEO</p>
        </div>

        <div class="bg-green-50 border border-green-200 rounded-xl p-4">
            <div class="flex items-center gap-2 mb-2">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <h3 class="font-bold text-green-900">Image Size</h3>
            </div>
            <p class="text-sm text-green-700">Use high-quality images (1200x630px recommended)</p>
        </div>

        <div class="bg-purple-50 border border-purple-200 rounded-xl p-4">
            <div class="flex items-center gap-2 mb-2">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                </svg>
                <h3 class="font-bold text-purple-900">Tags</h3>
            </div>
            <p class="text-sm text-purple-700">Add 3-5 relevant tags to improve discoverability</p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.ckeditor.com/ckeditor5/41.2.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'), {
                toolbar: ['heading', '|', 'bold', 'italic', 'link', 'bulletedList', 'numberedList', '|', 'blockQuote', 'insertTable', '|', 'undo', 'redo']
            })
            .catch(error => console.error(error));

        function previewImage(event) {
            const input = event.target;
            const preview = document.getElementById('imagePreview');
            const container = document.getElementById('previewContainer');

            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    container.style.display = 'block';
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        function removeImage() {
            const input = document.getElementById('coverInput');
            const preview = document.getElementById('imagePreview');
            const container = document.getElementById('previewContainer');

            input.value = '';
            preview.src = '#';
            container.style.display = 'none';
        }
    </script>
}