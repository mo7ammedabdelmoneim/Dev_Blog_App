@model RegisterUserViewModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-50 via-white to-indigo-100 px-4">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-100  my-10">
        <div class="px-8 py-10">
            <h2 class="text-3xl font-bold text-center text-indigo-600 mb-6">Create your account</h2>

            <form asp-action="Register" method="post" class="space-y-5">
                <div asp-validation-summary="All" class="text-red-600 text-sm mb-4"></div>
                <div>
                    <label asp-for="UserName" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                    <input asp-for="UserName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition" placeholder="Enter your username" />
                    <span asp-validation-for="UserName" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    <input asp-for="Email" type="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition" placeholder="example@email.com" />
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                    <input asp-for="Password" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition" placeholder="********" />
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition" placeholder="********" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
                </div>

                <button type="submit" class="w-full bg-indigo-600 text-white py-2.5 rounded-lg font-medium hover:bg-indigo-700 transition duration-200 shadow-md hover:shadow-lg">
                    Create Account
                </button>
            </form>

            <p class="text-center text-gray-500 text-sm mt-6">
                Already have an account?
                <a asp-action="Login" class="text-indigo-600 hover:text-indigo-700 font-medium">Sign in</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
