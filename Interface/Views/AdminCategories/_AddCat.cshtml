@model Category

<!-- Add New Category -->
<form asp-action="Create" asp-controller="AdminCategories" method="post" class="flex mb-6">
    <input type="text" asp-for="Name" placeholder="New category name"
           class="flex-1 border border-gray-300 rounded-l-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500"
           required>



    <button type="submit"
            class="bg-indigo-600 text-white px-4 py-2 rounded-r-lg hover:bg-indigo-700">
        ➕ Add
    </button>
</form>

<span asp-validation-for="Name" class="text-red-500 text-sm"></span>
