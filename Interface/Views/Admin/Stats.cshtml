@using System.Text.Json
@model AdminStatsViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Platform Statistics";
}

<style>
    .stat-card {
        background: linear-gradient(145deg, #ffffff 0%, #f8f9ff 100%);
        border: 1px solid rgba(102, 126, 234, 0.1);
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

    .chart-container {
        background: white;
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    }
</style>

<div class="max-w-7xl mx-auto">

    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-4xl font-extrabold text-gray-900 flex items-center gap-3">
            <div class="bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl p-3">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
            </div>
            Platform Statistics
        </h1>
        <p class="text-gray-600 mt-2 ml-1">Comprehensive analytics and insights</p>
    </div>

    <!-- Key Metrics Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
        <div class="stat-card rounded-2xl p-6 shadow-lg">
            <div class="flex items-center justify-between mb-4">
                <div class="bg-indigo-100 rounded-xl p-3">
                    <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                </div>
            </div>
            <h3 class="text-gray-500 text-sm font-semibold mb-1">Avg Comments / Post</h3>
            <p class="text-4xl font-extrabold text-indigo-600">@Model.AvgCommentsPerPost.ToString("0.0")</p>
            <div class="mt-3 flex items-center text-sm text-gray-600">
                <svg class="w-4 h-4 text-green-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
                </svg>
                <span>Engagement rate</span>
            </div>
        </div>

        <div class="stat-card rounded-2xl p-6 shadow-lg">
            <div class="flex items-center justify-between mb-4">
                <div class="bg-pink-100 rounded-xl p-3">
                    <svg class="w-8 h-8 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                </div>
            </div>
            <h3 class="text-gray-500 text-sm font-semibold mb-1">Avg Reacts / Post</h3>
            <p class="text-4xl font-extrabold text-pink-600">@Model.AvgReactsPerPost.ToString("0.0")</p>
            <div class="mt-3 flex items-center text-sm text-gray-600">
                <svg class="w-4 h-4 text-green-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
                </svg>
                <span>User interactions</span>
            </div>
        </div>

        <div class="stat-card rounded-2xl p-6 shadow-lg">
            <div class="flex items-center justify-between mb-4">
                <div class="bg-green-100 rounded-xl p-3">
                    <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                    </svg>
                </div>
            </div>
            <h3 class="text-gray-500 text-sm font-semibold mb-1">Total Growth</h3>
            <p class="text-4xl font-extrabold text-green-600">+@((Model.MonthlyUserGrowth.Sum(x => x.Count) + Model.MonthlyPostGrowth.Sum(x => x.Count)))</p>
            <div class="mt-3 flex items-center text-sm text-gray-600">
                <svg class="w-4 h-4 text-green-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
                </svg>
                <span>This period</span>
            </div>
        </div>

        <div class="stat-card rounded-2xl p-6 shadow-lg">
            <div class="flex items-center justify-between mb-4">
                <div class="bg-purple-100 rounded-xl p-3">
                    <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                    </svg>
                </div>
            </div>
            <h3 class="text-gray-500 text-sm font-semibold mb-1">Active Categories</h3>
            <p class="text-4xl font-extrabold text-purple-600">@Model.TopCategories.Count()</p>
            <div class="mt-3 flex items-center text-sm text-gray-600">
                <svg class="w-4 h-4 text-blue-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v3.586L7.707 9.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 10.586V7z" clip-rule="evenodd" />
                </svg>
                <span>Content organized</span>
            </div>
        </div>
    </div>

    <!-- Growth Charts -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <div class="chart-container">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h2 class="text-xl font-bold text-gray-900 flex items-center gap-2">
                        <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                        </svg>
                        User Growth
                    </h2>
                    <p class="text-sm text-gray-500 mt-1">Monthly new registrations</p>
                </div>
            </div>
            <canvas id="userGrowthChart" class="w-full" style="max-height: 300px;"></canvas>
        </div>

        <div class="chart-container">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h2 class="text-xl font-bold text-gray-900 flex items-center gap-2">
                        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        Post Growth
                    </h2>
                    <p class="text-sm text-gray-500 mt-1">Monthly content creation</p>
                </div>
            </div>
            <canvas id="postGrowthChart" class="w-full" style="max-height: 300px;"></canvas>
        </div>
    </div>

    <!-- Category and Roles -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <div class="chart-container">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h2 class="text-xl font-bold text-gray-900 flex items-center gap-2">
                        <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                        </svg>
                        Top Categories
                    </h2>
                    <p class="text-sm text-gray-500 mt-1">Most popular content types</p>
                </div>
            </div>
            <canvas id="categoryChart" class="w-full" style="max-height: 300px;"></canvas>
        </div>

        <div class="chart-container">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h2 class="text-xl font-bold text-gray-900 flex items-center gap-2">
                        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                        </svg>
                        Users by Role
                    </h2>
                    <p class="text-sm text-gray-500 mt-1">Role distribution</p>
                </div>
            </div>
            <canvas id="roleChart" class="w-full" style="max-height: 300px;"></canvas>
        </div>
    </div>

    <!-- Data Summary Table -->
    <div class="bg-white rounded-2xl shadow-xl p-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center gap-2">
            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
            Quick Summary
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 p-5 rounded-xl border border-indigo-200">
                <p class="text-gray-600 text-sm font-semibold mb-2">Total Monthly Users</p>
                <p class="text-3xl font-extrabold text-indigo-700">@Model.MonthlyUserGrowth.Sum(x => x.Count)</p>
            </div>

            <div class="bg-gradient-to-br from-green-50 to-green-100 p-5 rounded-xl border border-green-200">
                <p class="text-gray-600 text-sm font-semibold mb-2">Total Monthly Posts</p>
                <p class="text-3xl font-extrabold text-green-700">@Model.MonthlyPostGrowth.Sum(x => x.Count)</p>
            </div>

            <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-5 rounded-xl border border-purple-200">
                <p class="text-gray-600 text-sm font-semibold mb-2">Most Active Category</p>
                <p class="text-2xl font-extrabold text-purple-700 truncate">
                    @if (Model.TopCategories.Any())
                    {
                        @Model.TopCategories.OrderByDescending(c => c.PostCount).First().Name
                    }
                    else
                    {
                        <text>N/A</text>
                    }
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // --- safe server -> js serialization
        const userGrowth = @Html.Raw(JsonSerializer.Serialize(Model.MonthlyUserGrowth));
        const postGrowth = @Html.Raw(JsonSerializer.Serialize(Model.MonthlyPostGrowth ));
        const categories = @Html.Raw(JsonSerializer.Serialize(Model.TopCategories ));
        const roles = @Html.Raw(JsonSerializer.Serialize(Model.RoleCounts));

        // Debug: افتح الكونسول وشوف النتايج — لازم تكون Arrays من Objects
        console.log("userGrowth:", userGrowth);
        console.log("postGrowth:", postGrowth);
        console.log("categories:", categories);
        console.log("roles:", roles);

        // تأكد من وجود بيانات قبل التحويل
        const userLabels = Array.isArray(userGrowth) ? userGrowth.map(x => x.Month ?? '') : [];
        const userData = Array.isArray(userGrowth) ? userGrowth.map(x => Number(x.Count) || 0) : [];

        const postLabels = Array.isArray(postGrowth) ? postGrowth.map(x => x.Month ?? '') : [];
        const postData = Array.isArray(postGrowth) ? postGrowth.map(x => Number(x.Count) || 0) : [];

        const categoryLabels = Array.isArray(categories) ? categories.map(x => x.Name ?? '') : [];
        const categoryData = Array.isArray(categories) ? categories.map(x => Number(x.PostCount) || 0) : [];

        const roleLabels = Array.isArray(roles) ? roles.map(x => x.RoleName ?? '') : [];
        const roleData = Array.isArray(roles) ? roles.map(x => Number(x.Count) || 0) : [];

        console.log("userLabels, userData", userLabels, userData);
        console.log("postLabels, postData", postLabels, postData);
        console.log("categoryLabels, categoryData", categoryLabels, categoryData);
        console.log("roleLabels, roleData", roleLabels, roleData);

        // Helper: create chart only if element exists and data present
        function safeCreateChart(canvasId, cfg) {
            const el = document.getElementById(canvasId);
            if (!el) { console.warn("Canvas not found:", canvasId); return; }
            try {
                return new Chart(el, cfg);
            } catch (err) {
                console.error("Chart creation error for", canvasId, err);
            }
        }

        // If arrays empty show placeholder instead of creating blank charts
        if (userLabels.length) {
            safeCreateChart('userGrowthChart', {
                type: 'line',
                data: { labels: userLabels, datasets: [{ label: 'New Users', data: userData, borderColor: '#6366f1', backgroundColor: 'rgba(99,102,241,0.1)', fill: true, tension: 0.4, borderWidth: 3, pointRadius: 5 }] },
                options: { responsive: true, maintainAspectRatio: true, plugins: { legend: { display: false } }, scales: { y: { beginAtZero: true }, x: { grid: { display: false } } } }
            });
        } else {
            console.info("No user growth data to render chart.");
        }

        if (postLabels.length) {
            safeCreateChart('postGrowthChart', {
                type: 'line',
                data: { labels: postLabels, datasets: [{ label: 'New Posts', data: postData, borderColor: '#22c55e', backgroundColor: 'rgba(34,197,94,0.1)', fill: true, tension: 0.4, borderWidth: 3, pointRadius: 5 }] },
                options: { responsive: true, maintainAspectRatio: true, plugins: { legend: { display: false } }, scales: { y: { beginAtZero: true }, x: { grid: { display: false } } } }
            });
        } else {
            console.info("No post growth data to render chart.");
        }

        if (categoryLabels.length) {
            safeCreateChart('categoryChart', {
                type: 'bar',
                data: { labels: categoryLabels, datasets: [{ label: 'Posts per Category', data: categoryData, backgroundColor: ['#6366f1','#22c55e','#f59e0b','#ef4444','#3b82f6','#8b5cf6','#ec4899'], borderRadius: 8, borderWidth: 0 }] },
                options: { responsive: true, maintainAspectRatio: true, plugins: { legend: { display: false } }, scales: { y: { beginAtZero: true }, x: { grid: { display: false } } } }
            });
        } else {
            console.info("No category data to render chart.");
        }

        if (roleLabels.length) {
            safeCreateChart('roleChart', {
                type: 'doughnut',
                data: { labels: roleLabels, datasets: [{ label: 'Users by Role', data: roleData, backgroundColor: ['#6366f1','#f59e0b','#22c55e','#ef4444','#3b82f6','#8b5cf6'], borderWidth: 3, borderColor: '#fff' }] },
                options: { responsive: true, maintainAspectRatio: true, plugins: { legend: { position: 'bottom' } } }
            });
        } else {
            console.info("No role data to render chart.");
        }
    </script>
}