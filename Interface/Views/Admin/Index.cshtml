@model AdminDashboardViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard Overview";
}

<style>
    .stat-card {
        background: linear-gradient(145deg, #ffffff 0%, #f8f9ff 100%);
        border: 1px solid rgba(102, 126, 234, 0.1);
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

    .activity-item {
        transition: background-color 0.2s ease;
    }

        .activity-item:hover {
            background-color: #f8f9ff;
        }
</style>

<div class="max-w-7xl mx-auto">

    <!-- Welcome Section -->
    <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-2xl p-8 mb-8 text-white shadow-xl">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold mb-2">Welcome back,@User.Identity.Name Admin!</h1>
                <p class="text-indigo-100 text-lg">Here's what's happening with your platform today.</p>
            </div>
            <div class="hidden md:block">
                <svg class="w-32 h-32 text-white opacity-20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
            </div>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
        <div class="stat-card rounded-2xl p-6 shadow-lg">
            <div class="flex items-center justify-between mb-4">
                <div class="bg-indigo-100 rounded-xl p-3">
                    <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                </div>
            </div>
            <h3 class="text-gray-500 text-sm font-semibold mb-1">Total Users</h3>
            <p class="text-4xl font-extrabold text-indigo-600">@Model.TotalUsers</p>
            <div class="mt-3 flex items-center text-sm">
                <svg class="w-4 h-4 text-green-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
                </svg>
                <span class="text-green-600 font-semibold">+12%</span>
                <span class="text-gray-500 ml-1">from last month</span>
            </div>
        </div>

        <div class="stat-card rounded-2xl p-6 shadow-lg">
            <div class="flex items-center justify-between mb-4">
                <div class="bg-purple-100 rounded-xl p-3">
                    <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                </div>
            </div>
            <h3 class="text-gray-500 text-sm font-semibold mb-1">Total Posts</h3>
            <p class="text-4xl font-extrabold text-purple-600">@Model.TotalPosts</p>
            <div class="mt-3 flex items-center text-sm">
                <svg class="w-4 h-4 text-green-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
                </svg>
                <span class="text-green-600 font-semibold">+8%</span>
                <span class="text-gray-500 ml-1">from last month</span>
            </div>
        </div>

        <div class="stat-card rounded-2xl p-6 shadow-lg">
            <div class="flex items-center justify-between mb-4">
                <div class="bg-green-100 rounded-xl p-3">
                    <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                    </svg>
                </div>
            </div>
            <h3 class="text-gray-500 text-sm font-semibold mb-1">Total Categories</h3>
            <p class="text-4xl font-extrabold text-green-600">@Model.TotalCategories</p>
            <div class="mt-3 flex items-center text-sm">
                <svg class="w-4 h-4 text-blue-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v3.586L7.707 9.293a1 1 0 00-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 10.586V7z" clip-rule="evenodd" />
                </svg>
                <span class="text-gray-500">Well organized</span>
            </div>
        </div>

        <div class="stat-card rounded-2xl p-6 shadow-lg">
            <div class="flex items-center justify-between mb-4">
                <div class="bg-orange-100 rounded-xl p-3">
                    <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                </div>
            </div>
            <h3 class="text-gray-500 text-sm font-semibold mb-1">Total Comments</h3>
            <p class="text-4xl font-extrabold text-orange-600">@Model.TotalComments</p>
            <div class="mt-3 flex items-center text-sm">
                <svg class="w-4 h-4 text-green-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
                </svg>
                <span class="text-green-600 font-semibold">+24%</span>
                <span class="text-gray-500 ml-1">engagement up</span>
            </div>
        </div>
    </div>

    <!-- Activity Section -->
    @if (ViewBag.Role == "admin")
    {
        <span>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-10">
        </span>
    }
    else{
        <span>  <div class="grid grid-cols-1 lg:grid-cols-1 gap-6 mb-10"></span>
        }

        <!-- Latest Posts -->
        <div class="bg-white rounded-2xl p-6 shadow-xl">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h2 class="text-xl font-bold text-gray-900 flex items-center gap-2">
                        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        Latest Posts
                    </h2>
                    <p class="text-sm text-gray-500 mt-1">Recent blog activity</p>
                </div>
                <a asp-controller="AdminPosts" asp-action="Index" class="text-indigo-600 hover:text-indigo-800 text-sm font-semibold flex items-center gap-1">
                    View All
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </a>
            </div>

            @if (Model.LatestPosts != null && Model.LatestPosts.Any())
            {
                <ul class="space-y-3">
                    @foreach (var post in Model.LatestPosts)
                    {
                        <li class="activity-item flex justify-between items-center p-4 rounded-xl border border-gray-100">
                            <div class="flex items-center gap-3 flex-1">
                                <div class="w-10 h-10 bg-gradient-to-br from-purple-500 to-pink-500 rounded-lg flex items-center justify-center flex-shrink-0">
                                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                    </svg>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm font-semibold text-gray-900 truncate">@post.Title</p>
                                </div>
                            </div>
                            <div class="text-right flex-shrink-0 ml-4">
                                <span class="text-sm font-medium text-gray-900">@post.CreationDate.ToString("MMM dd")</span>
                                <p class="text-xs text-gray-500">@post.CreationDate.ToString("yyyy")</p>
                            </div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="text-center py-8">
                    <svg class="w-16 h-16 mx-auto text-gray-300 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <p class="text-gray-500 text-sm">No posts yet</p>
                </div>
            }
        </div>
         @if (ViewBag.Role == "admin")
            {
        
            <!-- Recent Users -->
            <div class="bg-white rounded-2xl p-6 shadow-xl">
                <div class="flex items-center justify-between mb-6">
                    <div>
                        <h2 class="text-xl font-bold text-gray-900 flex items-center gap-2">
                            <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                            </svg>
                            New Users
                        </h2>
                        <p class="text-sm text-gray-500 mt-1">Recently joined members</p>
                    </div>
                    <a asp-controller="AdminUsers" asp-action="Index" class="text-indigo-600 hover:text-indigo-800 text-sm font-semibold flex items-center gap-1">
                        View All
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </a>
                </div>

                @if (Model.LatestUsers != null && Model.LatestUsers.Any())
                {
                    <ul class="space-y-3">
                        @foreach (var user in Model.LatestUsers)
                        {
                            <li class="activity-item flex justify-between items-center p-4 rounded-xl border border-gray-100">
                                <div class="flex items-center gap-3 flex-1">
                                    <div class="w-10 h-10 bg-gradient-to-br from-indigo-500 to-blue-500 rounded-full flex items-center justify-center flex-shrink-0">
                                        <span class="text-white font-bold text-sm">
                                            @user.Title.Substring(0, Math.Min(2, user.Title.Length)).ToUpper()
                                        </span>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <p class="text-sm font-semibold text-gray-900 truncate">@user.Title</p>
                                        <p class="text-xs text-gray-500 truncate">@user.Email</p>
                                    </div>
                                </div>
                                <div class="flex-shrink-0 ml-4">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">
                                        New
                                    </span>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-center py-8">
                        <svg class="w-16 h-16 mx-auto text-gray-300 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                        </svg>
                        <p class="text-gray-500 text-sm">No new users</p>
                    </div>
                }
            </div>
        }
        </div>
    <!-- Performance Overview -->
    <div class="bg-white rounded-2xl p-8 shadow-xl">
        <div class="mb-6">
            <h2 class="text-2xl font-bold text-gray-900 flex items-center gap-2">
                <svg class="w-7 h-7 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
                Performance Overview
            </h2>
            <p class="text-gray-600 mt-1">Key metrics and insights</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 p-6 rounded-xl border border-indigo-200">
                <div class="flex items-center justify-between mb-3">
                    <svg class="w-10 h-10 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
                    </svg>
                </div>
                <p class="text-gray-600 text-sm font-semibold mb-2">Average Posts per User</p>
                <p class="text-3xl font-extrabold text-indigo-700">@Model.AvgPostsPerUser.ToString("0.0")</p>
                <p class="text-xs text-indigo-600 mt-2">Great engagement rate!</p>
            </div>

            <div class="bg-gradient-to-br from-green-50 to-green-100 p-6 rounded-xl border border-green-200">
                <div class="flex items-center justify-between mb-3">
                    <svg class="w-10 h-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                    </svg>
                </div>
                <p class="text-gray-600 text-sm font-semibold mb-2">Most Active Category</p>
                <p class="text-2xl font-extrabold text-green-700 truncate">@Model.MostActiveCategory</p>
                <p class="text-xs text-green-600 mt-2">Top performing topic</p>
            </div>

            <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 p-6 rounded-xl border border-yellow-200">
                <div class="flex items-center justify-between mb-3">
                    <svg class="w-10 h-10 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                </div>
                <p class="text-gray-600 text-sm font-semibold mb-2">Most Reacted Post</p>
                <p class="text-xl font-extrabold text-yellow-700 truncate">@Model.TopPostTitle</p>
                <p class="text-xs text-yellow-600 mt-2">Community favorite</p>
            </div>
        </div>
    </div>

    @if (ViewBag.Role == "admin")
    {
        <!-- Quick Actions -->
        <div class="mt-10 bg-gradient-to-r from-gray-50 to-gray-100 rounded-2xl p-8 border border-gray-200">
            <h3 class="text-xl font-bold text-gray-900 mb-6">Quick Actions</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                <a asp-controller="AdminPosts" asp-action="Add" class="flex items-center gap-3 bg-white p-4 rounded-xl shadow hover:shadow-lg transition border border-gray-200">
                    <div class="bg-indigo-100 rounded-lg p-3">
                        <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                        </svg>
                    </div>
                    <span class="font-semibold text-gray-900">Add Post</span>
                </a>

                <a asp-controller="AdminCategories" asp-action="index" class="flex items-center gap-3 bg-white p-4 rounded-xl shadow hover:shadow-lg transition border border-gray-200">
                    <div class="bg-green-100 rounded-lg p-3">
                        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                        </svg>
                    </div>
                    <span class="font-semibold text-gray-900">Add Category</span>
                </a>

                <a asp-controller="AdminUsers" asp-action="Index" class="flex items-center gap-3 bg-white p-4 rounded-xl shadow hover:shadow-lg transition border border-gray-200">
                    <div class="bg-purple-100 rounded-lg p-3">
                        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                        </svg>
                    </div>
                    <span class="font-semibold text-gray-900">Manage Users</span>
                </a>

                <a asp-controller="Admin" asp-action="Stats" class="flex items-center gap-3 bg-white p-4 rounded-xl shadow hover:shadow-lg transition border border-gray-200">
                    <div class="bg-orange-100 rounded-lg p-3">
                        <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                    </div>
                    <span class="font-semibold text-gray-900">View Stats</span>
                </a>
            </div>
        </div>
    }
</div>