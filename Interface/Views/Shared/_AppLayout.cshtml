<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - DevBlog</title>

    <!-- Tailwind (CDN for quick setup) -->
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Interface.styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-50 flex flex-col min-h-screen">

    <!-- Navbar -->
    <header class="bg-white shadow-md py-4 px-8 flex justify-between items-center fixed w-full top-0 z-50">
        <a asp-action="Index" class="flex items-center gap-2">
            <h1 class="text-2xl font-bold text-indigo-600">&lt;/&gt; DevBlog</h1>
        </a>
        <nav class="flex gap-6">
            @if (Context.Request.Path == "/")
            {
                <a href="#features" class="hover:text-indigo-600">Features</a>
                <a href="#blogs" class="hover:text-indigo-600">Blogs</a>
                <a href="#testimonials" class="hover:text-indigo-600">Testimonials</a>

            }
            else{
                <a href="signup.html" class="bg-emerald-700 text-white px-4 py-2 rounded-lg hover:bg-emerald-800"> Sign Up</a>
            }
            <a href="login.html" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700">Login</a>
        </nav>
    </header>


    <!-- Main Content -->
    <main class="flex-1 mt-16">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="py-6 bg-gray-900 text-center text-gray-400">
        <p>© 2025 DevBlog. All rights reserved.</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
