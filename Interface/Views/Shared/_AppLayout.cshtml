@using Microsoft.AspNetCore.Http
            
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - DevBlog</title>

    <!-- Tailwind (CDN for quick setup) -->
    <script src="https://cdn.tailwindcss.com"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Interface.styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-50 flex flex-col min-h-screen">

    <!-- Navbar -->
    <header class="bg-white shadow-md py-4 px-8 flex justify-between items-center fixed w-full top-0 z-50">
        <!-- Logo -->
        <a asp-action="Index" asp-controller="Post" class="flex items-center gap-2">
            <h1 class="text-2xl font-bold text-indigo-600">&lt;/&gt; DevBlog</h1>
        </a>

        <!-- Navigation -->
        <nav class="flex items-center gap-6 relative">

            @if (Context.Request.Path == "/")
            {
                <a href="#features" class="hover:text-indigo-600">Features</a>
                <a href="#blogs" class="hover:text-indigo-600">Blogs</a>
                <a href="#testimonials" class="hover:text-indigo-600">Testimonials</a>
            }

            @if (Context.Request.Path == "/Post"){
                <!-- Categories Dropdown -->
                <div class="relative group">
                    <button class="flex items-center gap-1 text-gray-700 hover:text-indigo-600 font-medium">
                        Categories
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>

                    <!-- Dropdown menu -->
                    <div class="absolute hidden group-hover:block bg-white shadow-lg rounded-xl py-2 w-48 mt-2 border border-gray-100">
                        @foreach (var cat in ViewBag.Categories as List<Category>)
                        {
                            <a asp-action="ByCategory" asp-route-category="@cat.Name"
                               class="block px-4 py-2 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 transition">
                                @cat.Name
                            </a>
                        }
                    </div>
                </div>
            }
             <!-- Auth Section -->
        @if (!User.Identity.IsAuthenticated)
        {
            <div class="flex items-center gap-4">
                <a asp-action="Login" asp-controller="Account"
                   class="px-4 py-2 text-indigo-600 border border-indigo-600 rounded-lg hover:bg-indigo-50 transition">
                    Login
                </a>
                <a asp-action="Register" asp-controller="Account"
                   class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition">
                    Sign Up
                </a>
            </div>
        }
        else
        {
            <div class="flex items-center gap-4">
                    <span class="text-gray-700 font-medium"> <span class="text-indigo-600">Hi, @User.Identity.Name</span> </span>
                <a class="btn btn-danger" href="@Url.Action("Logout", "Account")">Logout</a>
            </div>
        }

        </nav>
    </header>



    <!-- Main Content -->
    <main class="flex-1 mt-16">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="py-6 bg-gray-900 text-center text-gray-400">
        <p>© 2025 DevBlog. All rights reserved.</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
