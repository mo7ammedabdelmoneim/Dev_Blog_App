@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - DevBlog</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Interface.styles.css" asp-append-version="true" />

    <style>
        .gradient-text {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .nav-link-hover {
            transition: all 0.2s ease;
        }

            .nav-link-hover:hover {
                transform: translateY(-2px);
            }

        .dropdown-menu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease;
        }

        .dropdown-trigger:hover .dropdown-menu {
            max-height: 500px;
        }
    </style>
</head>
<body class="bg-gray-50 flex flex-col min-h-screen">

    <!-- Navbar -->
    <header class="bg-white shadow-sm border-b border-gray-200 fixed w-full top-0 z-50">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">

                <!-- Logo -->
                @if (Context.Request.Path.StartsWithSegments("/Account") || Context.Request.Path == "/")
                {
                    <a asp-action="Index" asp-controller="Home" class="flex items-center gap-2">
                        <div class="bg-gradient-to-br from-indigo-600 to-purple-600 rounded-lg p-2">
                            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3z" />
                            </svg>
                        </div>
                        <span class="gradient-text text-xl font-bold">DevBlog</span>
                    </a>
                }
                else
                {
                    <a asp-action="Index" asp-controller="Post" class="flex items-center gap-2">
                        <div class="bg-gradient-to-br from-indigo-600 to-purple-600 rounded-lg p-2">
                            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3z" />
                            </svg>
                        </div>
                        <span class="gradient-text text-xl font-bold">DevBlog</span>
                    </a>
                }

                <!-- Desktop Navigation -->
                <nav class="hidden md:flex items-center gap-2">

                    @if (Context.Request.Path == "/")
                    {
                        <a href="#features" class="nav-link-hover text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 px-4 py-2 rounded-lg font-semibold transition">
                            Features
                        </a>
                        <a href="#blogs" class="nav-link-hover text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 px-4 py-2 rounded-lg font-semibold transition">
                            Blogs
                        </a>
                        <a href="#testimonials" class="nav-link-hover text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 px-4 py-2 rounded-lg font-semibold transition">
                            Testimonials
                        </a>
                    }

                   
                    @if (!User.Identity.IsAuthenticated)
                    {
                    

                        <a asp-action="Login" asp-controller="Account"
                           class="text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 px-4 py-2 rounded-lg font-semibold">
                            Sign In
                        </a>
                        <a asp-action="Register" asp-controller="Account"
                           class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-4 py-2 rounded-lg font-semibold text-center">
                            Get Started
                        </a>
                    }
                    else
                    {
                        <!-- Categories Dropdown -->
                        <div class="relative group">
                            <button class="nav-link-hover flex items-center gap-2 text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 px-4 py-2 rounded-lg font-semibold transition">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                                </svg>
                                Categories
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                </svg>
                            </button>



                            <!-- Dropdown menu -->
                            <div class="absolute hidden group-hover:block bg-white shadow-lg rounded-xl py-2 w-48 mt-2 border border-gray-100">
                                @foreach (var cat in ViewBag.Categories as List<Category>)
                                {
                                    <a asp-action="ByCategory" asp-route-category="@cat.Name"
                                        class="block px-4 py-2 text-gray-700 hover:bg-indigo-50 hover:text-indigo-600 transition">
                                        @cat.Name
                                    </a>
                                }
                            </div>

                        </div>

                        <div class="flex items-center gap-4">
                            <span class="text-gray-700 font-medium"> <span class="text-indigo-600">Hi, @User.Identity.Name</span> </span>
                            <a class="btn btn-danger" href="@Url.Action("Logout", "Account")">Logout</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-1 mt-16">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-gradient-to-r from-gray-900 to-gray-800 text-white py-8">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
                <div class="flex items-center gap-2">
                    <div class="bg-gradient-to-br from-indigo-600 to-purple-600 rounded-lg p-2">
                        <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3z" />
                        </svg>
                    </div>
                    <span class="text-lg font-bold">DevBlog</span>
                </div>

                <p class="text-gray-400 text-sm">
                    © @DateTime.Now.Year DevBlog. All rights reserved.
                </p>

                <div class="flex gap-4">
                    <a href="#" class="text-gray-400 hover:text-white transition">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z" />
                        </svg>
                    </a>
                    <a href="#" class="text-gray-400 hover:text-white transition">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Mobile menu toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const mobileMenu = document.getElementById('mobileMenu');

        if (mobileMenuBtn && mobileMenu) {
            mobileMenuBtn.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>