<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DevBlog</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .gradient-text {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        .nav-link {
            transition: all 0.2s ease;
        }
        .nav-link:hover {
            transform: translateY(-2px);
        }
    </style>
</head>
<body class="bg-gray-50 font-sans antialiased flex flex-col min-h-screen">
    
    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-50 border-b border-gray-200">
        <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                
                <!-- Logo -->
                <a class="flex items-center gap-2 text-xl font-bold text-gray-900 hover:opacity-80 transition"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="bg-gradient-to-br from-indigo-600 to-purple-600 rounded-lg p-2">
                        <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3z"/>
                        </svg>
                    </div>
                    <span class="gradient-text">DevBlog</span>
                </a>

                <!-- Desktop Navigation -->
                <div class="hidden md:flex items-center space-x-1">
                    <a class="nav-link text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 px-4 py-2 rounded-lg text-sm font-semibold"
                       asp-area="" asp-controller="Home" asp-action="Index">
                        Home
                    </a>
                    <a class="nav-link text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 px-4 py-2 rounded-lg text-sm font-semibold"
                       asp-area="" asp-controller="Guest" asp-action="Index">
                        Explore
                    </a>
                    <a class="nav-link text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 px-4 py-2 rounded-lg text-sm font-semibold"
                       asp-area="" asp-controller="Home" asp-action="About">
                        About
                    </a>
                    <a class="nav-link text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 px-4 py-2 rounded-lg text-sm font-semibold"
                       asp-area="" asp-controller="Home" asp-action="Contact">
                        Contact
                    </a>
                </div>

                <!-- Auth Buttons -->
                <div class="hidden md:flex items-center space-x-3">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="flex items-center gap-3">
                            <a asp-controller="Post" asp-action="Add" 
                               class="flex items-center gap-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-4 py-2 rounded-lg font-semibold hover:shadow-lg hover:scale-105 transition">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                                </svg>
                                Write
                            </a>
                            
                            <div class="relative group">
                                <button class="flex items-center gap-2 text-gray-700 hover:text-indigo-600 font-semibold">
                                    <div class="w-8 h-8 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-full flex items-center justify-center">
                                        <span class="text-white text-sm font-bold">
                                            @User.Identity.Name.Substring(0, Math.Min(2, User.Identity.Name.Length)).ToUpper()
                                        </span>
                                    </div>
                                    <span>@User.Identity.Name</span>
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                                    </svg>
                                </button>
                                
                                <div class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-xl border border-gray-200 py-2 hidden group-hover:block">
                                    <a asp-controller="User" asp-action="Profile" 
                                       class="block px-4 py-2 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-600">
                                        My Profile
                                    </a>
                                    <a asp-controller="Post" asp-action="MyPosts" 
                                       class="block px-4 py-2 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-600">
                                        My Posts
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-controller="Admin" asp-action="Index" 
                                           class="block px-4 py-2 text-sm text-gray-700 hover:bg-indigo-50 hover:text-indigo-600">
                                            Admin Dashboard
                                        </a>
                                    }
                                    <hr class="my-2">
                                    <a asp-controller="Account" asp-action="Logout" 
                                       class="block px-4 py-2 text-sm text-red-600 hover:bg-red-50">
                                        Logout
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" 
                           class="text-gray-700 hover:text-indigo-600 px-4 py-2 rounded-lg font-semibold transition">
                            Sign In
                        </a>
                        <a asp-controller="Account" asp-action="Register" 
                           class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-4 py-2 rounded-lg font-semibold hover:shadow-lg hover:scale-105 transition">
                            Get Started
                        </a>
                    }
                </div>

                <!-- Mobile Menu Button -->
                <button id="mobileMenuBtn" class="md:hidden p-2 rounded-lg hover:bg-gray-100">
                    <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                </button>
            </div>

            <!-- Mobile Menu -->
            <div id="mobileMenu" class="hidden md:hidden pb-4">
                <div class="flex flex-col space-y-2">
                    <a class="text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 px-4 py-2 rounded-lg text-sm font-semibold"
                       asp-area="" asp-controller="Home" asp-action="Index">
                        Home
                    </a>
                    <a class="text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 px-4 py-2 rounded-lg text-sm font-semibold"
                       asp-area="" asp-controller="Guest" asp-action="Index">
                        Explore
                    </a>
                    <a class="text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 px-4 py-2 rounded-lg text-sm font-semibold"
                       asp-area="" asp-controller="Home" asp-action="About">
                        About
                    </a>
                    <a class="text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 px-4 py-2 rounded-lg text-sm font-semibold"
                       asp-area="" asp-controller="Home" asp-action="Contact">
                        Contact
                    </a>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <hr class="my-2">
                        <a asp-controller="User" asp-action="Profile" 
                           class="text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 px-4 py-2 rounded-lg text-sm font-semibold">
                            My Profile
                        </a>
                        <a asp-controller="Post" asp-action="Add" 
                           class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-4 py-2 rounded-lg text-sm font-semibold text-center">
                            Write Post
                        </a>
                        <a asp-controller="Account" asp-action="Logout" 
                           class="text-red-600 hover:bg-red-50 px-4 py-2 rounded-lg text-sm font-semibold">
                            Logout
                        </a>
                    }
                    else
                    {
                        <hr class="my-2">
                        <a asp-controller="Account" asp-action="Login" 
                           class="text-gray-700 hover:text-indigo-600 hover:bg-indigo-50 px-4 py-2 rounded-lg text-sm font-semibold">
                            Sign In
                        </a>
                        <a asp-controller="Account" asp-action="Register" 
                           class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-4 py-2 rounded-lg text-sm font-semibold text-center">
                            Get Started
                        </a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="flex-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-auto">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                
                <!-- About -->
                <div>
                    <div class="flex items-center gap-2 mb-4">
                        <div class="bg-gradient-to-br from-indigo-600 to-purple-600 rounded-lg p-2">
                            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3z"/>
                            </svg>
                        </div>
                        <span class="gradient-text text-lg font-bold">DevBlog</span>
                    </div>
                    <p class="text-gray-600 text-sm">
                        A modern platform for developers to share knowledge and connect with the community.
                    </p>
                </div>

                <!-- Quick Links -->
                <div>
                    <h3 class="font-bold text-gray-900 mb-4">Quick Links</h3>
                    <ul class="space-y-2">
                        <li>
                            <a asp-controller="Home" asp-action="Index" class="text-gray-600 hover:text-indigo-600 text-sm transition">
                                Home
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Guest" asp-action="Index" class="text-gray-600 hover:text-indigo-600 text-sm transition">
                                Explore Posts
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="About" class="text-gray-600 hover:text-indigo-600 text-sm transition">
                                About Us
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="Contact" class="text-gray-600 hover:text-indigo-600 text-sm transition">
                                Contact
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Resources -->
                <div>
                    <h3 class="font-bold text-gray-900 mb-4">Resources</h3>
                    <ul class="space-y-2">
                        <li>
                            <a href="#" class="text-gray-600 hover:text-indigo-600 text-sm transition">
                                Documentation
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-gray-600 hover:text-indigo-600 text-sm transition">
                                API Reference
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-gray-600 hover:text-indigo-600 text-sm transition">
                                Community
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="Privacy" class="text-gray-600 hover:text-indigo-600 text-sm transition">
                                Privacy Policy
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Social Links -->
                <div>
                    <h3 class="font-bold text-gray-900 mb-4">Connect With Us</h3>
                    <div class="flex gap-3">
                        <a href="#" class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center hover:bg-indigo-600 hover:text-white transition">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                            </svg>
                        </a>
                        <a href="#" class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center hover:bg-indigo-600 hover:text-white transition">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                            </svg>
                        </a>
                        <a href="#" class="w-10 h-10 bg-gray-100 rounded-lg flex items-center justify-center hover:bg-indigo-600 hover:text-white transition">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Bottom Bar -->
            <div class="border-t border-gray-200 mt-8 pt-8 text-center text-sm text-gray-600">
                <p>
                    &copy; @DateTime.Now.Year DevBlog. All rights reserved. |
                    <a asp-controller="Home" asp-action="Privacy" class="text-indigo-600 hover:text-indigo-800 font-medium transition">
                        Privacy Policy
                    </a>
                    |
                    <a asp-controller="Home" asp-action="Terms" class="text-indigo-600 hover:text-indigo-800 font-medium transition">
                        Terms of Service
                    </a>
                </p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script>
        // Mobile menu toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const mobileMenu = document.getElementById('mobileMenu');
        
        if (mobileMenuBtn && mobileMenu) {
            mobileMenuBtn.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>